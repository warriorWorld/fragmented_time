<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:paddingLeft="17dp">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="title"
            android:textColor="@color/main_text_color"
            android:textSize="17sp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/cross_iv"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/cross_rect_gray" />
    </RelativeLayout>

    <TextView
        android:id="@+id/message_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="7dp"
        android:gravity="center_horizontal"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:text="message"
        android:textColor="@color/fragmented_time_blue"
        android:textSize="14sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/edit_et"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/btn_bg_empty_gray"
        android:gravity="center"
        android:inputType="text"
        android:textColor="@color/main_text_color"
        android:textColorHint="@color/main_text_color_gray"
        android:textSize="@dimen/main_text_size" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="11dp"
        android:background="@color/divide_line"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/cancel_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/main_text_color"
            android:textSize="18sp"
            android:visibility="visible" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/divide_line"></View>

        <TextView
            android:id="@+id/ok_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/fragmented_time"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>