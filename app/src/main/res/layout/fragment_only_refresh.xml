<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.truthower.suhang.fragmentedtime.widget.bar.TopBar
        android:id="@+id/refresh_frgament_topbar"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/white"
        app:left_background="@drawable/back_gray"
        app:title_text="标题"
        app:title_textColor="@color/main_text_color"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/base_swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/refresh_frgament_topbar">

        <FrameLayout
            android:id="@+id/swipe_target"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v4.widget.SwipeRefreshLayout>
</RelativeLayout>
